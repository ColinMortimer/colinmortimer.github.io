---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Coin Mortimer's Blog</title>
	<link href="http://colinmortimer.com/blog/atom.xml" rel="self"/>
	<link href="http://colinmortimer.com/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://colinmortimer.com/blog</id>
	<author>
		<name>Colin Mortimer</name>
		<email>hcolin.mortimer@uconn.edu</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="colinmortimer.com{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://colinmortimer.com{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
